{
	"$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/WorkingShift/v1/1_000/jsonschema/schemas/WorkingShift_1_000.json#",
	"info": {
		"description": "API para a entidade Turnos de Trabalho (WorkingShift) para produtos TOTVS",
		"version": "1.000",
		"title": "WorkingShift",
		"contact": {
			"name": "T-Talk",
			"url": "https://api.totvs.com.br",
			"email": "comiteintegracao@totvs.com.br"
		},
		"x-totvs": {
			"messageDocumentation": {
				"name": "WorkingShift",
				"description": "Turnos de Trabalho",
				"segment": "Recursos Humanos"
			},
			"productInformation": [
				{
					"product": "RM",
					"contact": "Donaldson Araujo Nunes <donaldson.nunes@totvs.com.br>",
                    "description": "Listagem de Cadastro de Horários",
                    "adapter" : "PtoHorarioData"
                },
                {
					"product": "PROTHEUS",
					"contact": "marcia.moura@totvs.com.br",
					"description": "Listagem de Turnos de Trabalho",
                    "adapter" : "GPEA080API.PRW"
				},
				{
					"product": "DATASUL",
					"contact": "triberh.progress.squad.pagadoria@totvs.com.br",
					"description": "Listagem de Turnos de Trabalho",
                    "adapter" : ""
				}                
			]
		}
	},
	"definitions": {
		"WorkingShiftInfo": {
		  "description": "Listagem de Turnos de Trabalho",
			"type": "object",
			"properties": {
				"id": {
					"description": "Chave única do registro dentro da entidade",
					"type": "string",
					"x-totvs": [
						{
                            "product": "RM",
                            "field": "AHORARIO.CODCOLIGADA|AHORARIO.CODIGO",
                            "available": true,
                            "type": "varchar",
							"required": true
						},
						{
                            "product": "PROTHEUS",
                            "field": "TMP.EMPRESA + SR6.R6_FILIAL + SR6.R6_TURNO",
                            "available": true,
                            "type": "varchar",
							"required": true
						},
						{
                            "product": "DATASUL",
                            "field": "",
                            "available": true,
                            "type": "varchar",
							"required": true
						}
					]
				},
				"CompanyId": {
					"type": "string",
					"example": "01",
					"description": "Código da Empresa",
					"x-totvs": [
						{
							"product": "RM",
							"field": "AHORARIO.CODCOLIGADA",
                            "available": true,                            
							"type": "integer",
							"length": 2,							
							"required": true,
							"canUpdate": false
						},
						{
							"product": "PROTHEUS",
							"field": "TMP.EMPRESA",
                            "available": true,                            
							"type": "string",
							"required": true,
							"canUpdate": false
						},
						{
							"product": "DATASUL",
							"field": "",
                            "available": true,                            
							"type": "",
							"required": true,
							"canUpdate": false
						}
					]
				},
				"BranchId": {
					"type": "string",
                    "description": "Código da Filial",
                    "example": "1",
					"x-totvs": [
						{
							"product": "RM",  
                            "field": "",
							"note": "não possui campo físico na tabela",
							"required": false		
						},
						{
							"product": "PROTHEUS",
							"field": "SR6.R6_FILIAL",
							"required": true,
							"type": "string",
							"available": true,
							"canUpdate": false
						},
						{
							"product": "DATASUL",
							"field": "",
							"required": true,
							"type": "",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"WorkingShiftCode": {
					"type": "string",					
                    "description": "Código do Turno de trabalho",
                    "example": "0001",
					"x-totvs": [
						{
							"product": "RM",
                            "field": "AHORARIO.CODIGO",
                            "required": true,                            
                            "type": "varchar",
                            "length": 10,
                            "available": true,
                            "canUpdate": false
						},
						{
							"product": "PROTHEUS",
                            "field": "SR6.R6_TURNO",
                            "required": true,                            
                            "type": "varchar",
                            "available": true,
                            "canUpdate": false
						},
						{
							"product": "DATASUL",
                            "field": "",
                            "required": true,                            
                            "type": "varchar",
                            "available": true,
                            "canUpdate": false
						}
					]
				},
				"Name": {
					"type": "string",
                    "description": "Descrição do Horário",
                    "example" : "Horário 08:00 12:00 14:00 18:00 sem Intervalo de Refeição.",
					"x-totvs": [
						{
                            "product": "RM",
                            "field": "AHORARIO.DESCRICAO",
                            "required": false,                            
                            "type": "varchar",
                            "length": 100,
                            "available": true,
                            "canUpdate": false
                        },
												{
                            "product": "PROTHEUS",
                            "field": "SR6.R6_DESC",
                            "required": false,                            
                            "type": "varchar",
                            "available": true,
                            "canUpdate": false
                        },
												{
                            "product": "DATASUL",
                            "field": "",
                            "required": false,                            
                            "type": "varchar",
                            "available": true,
                            "canUpdate": false
                        }
					]
				},
				"MonthlyWorkLoad": {
					"type": "string",					
                    "description": "Carga de trabalho mensal",
                    "example": "40:00",
					"x-totvs": [
						{
							"product": "RM",
                            "field": "Não possui campo físico na tabela.",
                            "required": false,                            
                            "note": "É equivalente ao campo calculado 'Número de Horas'.",							
                            "type": "varchar",
                            "length": 6,
                            "available": true,
                            "canUpdate": false
						},
												{
							"product": "PROTHEUS",
                            "field": "SR6.R6_RHNORMA",
                            "required": false,                            
                            "type": "integer",
                            "available": true,
                            "canUpdate": false
						},
						{
							"product": "DATASUL",
                            "field": "",
                            "required": false,                            
                            "type": "varchar",
                            "length": 6,
                            "available": true,
                            "canUpdate": false
						}
					]
				}				
			}
		}
	}
}