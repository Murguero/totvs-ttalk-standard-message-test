            "allOf": [
                {
                    "id": {
                        "description": "Chave unica do registro de abono",
                        "type": "string",
                        "x-totvs": [
                            {
                                "product": "RM",
                                "available": true,
                                "field": "",
                                "type": "string",
                                "required": true
                            },
                            {
                                "product": "PROTHEUS",
                                "available": true,
                                "field": "TMP.EMPRESA|RF0.RF0_FILIAL|RF0.RF0_DTPREI|RF0.RF0_HORINI|TMP.EMPRESA|SRA.RA_FILIAL|SRA.RA_MAT",
