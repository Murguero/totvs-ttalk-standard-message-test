						{
							"product": "RM",
							"field": "PFUNCAO.NOME",
							"required": false,
							"type": "varchar",
							"length": "tamanho máximo de 100",
							"available": true,
							"canUpdate": true
						}
					]
				}
			},
			"Cbo": {
				"type": "string",
					"example": "08320",
					"description": "CBO da Função",
					"x-totvs": [
						{
							"product": "RM",
							"field": "PFUNCAO.CBO",
							"required": false,
