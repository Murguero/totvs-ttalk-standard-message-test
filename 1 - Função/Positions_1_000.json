{
  "$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/Position/V1/1_000/jsonschema/schemas/Position_1_000.json#",
  "info": {
    "description": "API para a entidade de Funções para os produtos TOTVS.",
    "version": "1.000",
    "title": "Position",
    "contact": {
      "name": "T-Talk",
      "url": "https://api.totvs.com.br",
      "email": "comiteintegracao@totvs.com.br"
    },
    "x-totvs": {
      "messageDocumentation": {
        "name": "Position",
        "description": "Cadastro de Funções",
        "segment": "Recursos Humanos"
      },
      "productInformation": [
        {
          "product": "RM",
          "contact": "wellington.vieira@totvs.com.br",
          "note": "Folha de Pagamento",
          "adapter": "PositionController"
        },
        {
          "product": "PROTHEUS",
          "contact": "marcia.moura@totvs.com.br",
          "description": "Funções de Trabalho",
          "adapter": "GPEA030API.PRW"
        },
        {
          "product": "DATASUL",
          "contact": "fabio.abrao@totvs.com.br",
          "description": "Product Owner RH - Datasul",
          "adapter": "fpefd561"
        }
      ]
    }
  },
  "definitions": {
    "PagedPositions": {
      "type": "object",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
        },
        {
          "$ref": "#/definitions/Positions"
        }
      ]
    },
    "Positions": {
      "type": "object",
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/PositionInfo"
          }
        }
      }
    },
    "PositionInfo": {
      "description": "Cadastro de Funções",
      "type": "object",
      "properties": {
        "id": {
          "description": "Chave única do registro dentro da entidade",
          "type": "string",
          "x-totvs": [
            {
              "product": "RM",
              "available": true,
              "field": "PFUNCAO.CODCOLIGADA|PFUNCAO.CODIGO",
              "type": "string",
              "required": true
            },
            {
              "product": "PROTHEUS",
              "available": true,
              "field": "TMP.EMPRESA + SRJ.RJ_FILIAL + SRJ.RJ_FUNCAO",
              "type": "string",
              "required": true
            },
            {
              "product": "DATASUL",
              "available": true,
              "note": "Código da empresa + código da função",
              "field": "RH_ESTAB.CDN_EMPRESA|CARGO_BASIC.CDN_CARGO_BASIC",
              "type": "string",
              "required": true
            }
          ]
        },
        "companyCode": {
          "type": "string",
          "example": "1",
          "description": "Código da Empresa",
          "x-totvs": [
            {
              "product": "RM",
              "field": "PFUNCAO.CODCOLIGADA",
              "required": true,
              "type": "integer",
              "length": 2,
              "available": true,
              "canUpdate": false
            },
            {
              "product": "PROTHEUS",
              "field": "TMP.EMPRESA",
              "required": true,
              "type": "string",
              "available": true,
              "canUpdate": false
            },
            {
              "product": "DATASUL",
              "field": "RH_ESTAB.CDN_EMPRESA",
              "required": true,
              "type": "character",
              "length": 3,
              "available": true,
              "canUpdate": false
            }
          ]
        },
        "branchId": {
          "type": "string",
          "description": "Código da Filial",
          "x-totvs": [
            {
              "product": "RM",
              "note": "não possui campo físico na tabela",
              "required": false,
              "available": false,
              "canUpdate": false
            },
            {
              "product": "PROTHEUS",
              "field": "SRJ.RJ_FILIAL",
              "required": true,
              "type": "string",
              "available": true,
              "canUpdate": false
            },
            {
              "product": "DATASUL",
              "field": "RH_ESTAB.CDN_ESTAB",
              "required": true,
              "type": "character",
              "length": 5,
              "available": true,
              "canUpdate": false
            }
          ]
        },
        "positionCode": {
          "type": "string",
          "example": "1",
          "description": "Código da Função",
          "x-totvs": [
            {
              "product": "RM",
              "field": "PFUNCAO.CODIGO",
              "required": true,
              "type": "varchar",
              "length": "tamanho máximo de 10",
              "available": true,
              "canUpdate": false
            },
            {
              "product": "PROTHEUS",
              "field": "RJ_FUNCAO",
              "required": true,
              "type": "varchar",
              "available": true,
              "canUpdate": false
            },
            {
              "product": "DATASUL",
              "field": "CARGO_BASIC.CDN_CARGO_BASIC",
              "required": true,
              "type": "interger",
              "length": "tamanho máximo de 6",
              "available": true,
              "canUpdate": false
            }
          ]
        },
        "name": {
          "type": "string",
          "example": "Analista de Sistemas",
          "description": "Nome da Função",
          "x-totvs": [
            {
              "product": "RM",
              "field": "PFUNCAO.NOME",
              "required": false,
              "type": "varchar",
              "length": "tamanho máximo de 100",
              "available": true,
              "canUpdate": true
            },
            {
              "product": "PROTHEUS",
              "field": "RJ_DESC",
              "required": true,
              "type": "varchar",
              "available": true,
              "canUpdate": true
            },
            {
              "product": "DATASUL",
              "field": "CARGO_BASIC.DES_CARGO_BASIC",
              "required": false,
              "type": "character",
              "length": "30",
              "available": true,
              "canUpdate": true
            }
          ]
        },
        "cbo": {
          "type": "string",
          "example": "08320",
          "description": "CBO da Função",
          "x-totvs": [
            {
              "product": "RM",
              "field": "PFUNCAO.CBO2002",
              "required": false,
              "type": "varchar",
              "length": "tamanho máximo de 8",
              "available": true,
              "canUpdate": true
            },
            {
              "product": "PROTHEUS",
              "field": "RJ_CODCBO",
              "required": false,
              "type": "varchar",
              "available": true,
              "canUpdate": true
            },
            {
              "product": "DATASUL",
              "field": "CARGO_BASIC.COD_CLASSIF_OCUPAC",
              "required": false,
              "type": "character",
              "length": "6",
              "available": true,
              "canUpdate": true
            }
          ]
        }
      }
    }
  }
}
